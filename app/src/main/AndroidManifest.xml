<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.BaiTuanTong_Frontend">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        tools:replace="android:theme"
        android:allowBackup="true"
        android:icon="@mipmap/test_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/test_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelloWorld">
        <activity android:name=".GridView.ReleasePostActivity"></activity>
        <activity
            android:name=".club.EditClubAdminActivity"
            android:label="EditClubAdminActivity"
            android:parentActivityName=".club.ClubHomeActivity" />
        <activity
            android:name=".club.ClubHomeActivity"
            android:label="@string/title_activity_club_home"
            android:parentActivityName=".FollowedClubsDisplayActivity"
            android:theme="@style/Theme.HelloWorld.NoActionBar" />
        <activity
            android:name=".home.HomePageActivity"
            android:label="@string/title_activity_home_page" />
        <activity android:name=".PostPageActivity" />
        <activity
            android:name=".FollowedClubsDisplayActivity"
            android:parentActivityName=".home.HomePageActivity"
            android:theme="@style/Theme.HelloWorld.NoActionBar" />
        <activity android:name=".PostListDisplayActivity" />
        <activity android:name=".DisplayMessageActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>